{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "repoBaseUrl":{
            "type": "string",
            "metadata": {
                "description": "Base URL of the repository"
            }
        },
        "ApimServiceName": {
            "type": "string",
            "metadata": {
                "description" : "The name of the API Management"
            }
        },
        "publisherEmail": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "The email address of the owner of the service"
            }
        },
        "publisherName": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "The name of the owner of the service"
            }
        },
        "LinkedTemplatesBaseUrl": {
            "type": "string",
            "metadata": {
              "description": "Base URL of the repository"
            }
          }
    },
    "variables": {},
    "resources": [
        {
            "properties": {
              "mode": "Incremental",
              "templateLink": {
                 "uri":"[concat(parameters('repoBaseUrl'), '/hieuconv-api/hieuconvapim-dev-master.template.json')]",
                 "contentVersion":"1.0.0.0"
              },
              "parameters": {
                "ApimServiceName": {"value": "[parameters('ApimServiceName')]" }, 
                "PublisherName": {"value": "[parameters('PublisherName')]" },
                "PublisherEmail": {"value": "[parameters('PublisherEmail')]" },
                "LinkedTemplatesBaseUrl": {
                    "value": "[concat(parameters('LinkedTemplatesBaseUrl'),'/hieuconv-api')]"
                }
               }
            },
            "name": "HieuConvAPI",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-01-01",
            "dependsOn": []
        }
    ],
    "outputs": {}
}